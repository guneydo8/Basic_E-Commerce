@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Class1
@{
    Layout = null;
}

<br />
<br />
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>AdminLTE 3 | Dashboard 2</title>

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="/Klasörler/web4/plugins/fontawesome-free/css/all.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="/Klasörler/web4/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/Klasörler/web4/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        

        <!-- Content Wrapper. Contains page content -->

            <!-- Content Header (Page header) -->
            
            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <!-- Info boxes -->
                    <!-- /.row -->

                    
                    <!-- /.row -->
                    <!-- Main row -->
                    <div class="row">
                        <!-- Left col -->
                        <div class="col-md-8">
                            <!-- MAP & BOX PANE -->
                            <!-- /.card -->
                            <div class="row">
                                <div class="col-md-6">
                                    <!-- DIRECT CHAT -->
                                    <div class="card direct-chat direct-chat-warning">
                                        <div class="card-header">
                                            <h3 class="card-title">Ürün Yorumları</h3>
                                          


                                            <div class="card-tools">
                                                <span data-toggle="tooltip" title="" class="badge badge-warning">Son 5 Yorum Listelendi</span>
                                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                                    <i class="fas fa-minus"></i>
                                                </button>
                                               
                                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </div>
                                           
                                        </div>
                                        <!-- /.card-header -->
                                        <div class="card-body">
                                           
                                          


                                                <!-- Conversations are loaded here -->
                                            <div class="direct-chat-messages">
                                                @foreach (var item in Model.yrm)
                                                {
                                                    <!-- Message. Default to the left -->
                                                    <div class="direct-chat-msg">
                                                        <div class="direct-chat-infos clearfix">
                                                            <span class="direct-chat-name float-left">@item.Müşteriler.MüşteriAd @item.Müşteriler.MüşteriSoyad</span>
                                                            <span class="direct-chat-timestamp float-right">@item.Tarih.ToString("D")</span>
                                                        </div>
                                                        <!-- /.direct-chat-infos -->
                                                        <img class="direct-chat-img" src="@item.Müşteriler.MüşteriFotograf" alt="message user image">
                                                        <!-- /.direct-chat-img -->
                                                        <div class="direct-chat-text">
                                                            @item.İçerik<img class="direct-chat-img" src="@item.Ürünler.ÜrünGörsel" alt="message user image">
                                                        </div>
                                                        <!-- /.direct-chat-text -->
                                                    </div>
                                                }
                                                </div>
                                              
                                            
                                            </div>
                                        <!-- /.card-body -->
                                        
                                        <!-- /.card-footer-->
                                    </div>
                                    <!--/.direct-chat -->
                                </div>
                                <!-- /.col -->

                                <div class="col-md-6">
                                    <!-- USERS LIST -->
                                    <div class="card">
                                        <div class="card-header">
                                            <h3 class="card-title">Müşteri Listesi</h3>

                                            <div class="card-tools">
                                                <span class="badge badge-danger">Son 5 Müşteri Kaydı Listelendi</span>
                                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                                    <i class="fas fa-minus"></i>
                                                </button>
                                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <!-- /.card-header -->



                                        <div class="card-body p-0">

                                            <ul class="users-list clearfix">
                                                @foreach (var item in Model.mst)
                                                {
                                                    <li>

                                                        <img style="height:100px;width:100px" src="@item.MüşteriFotograf" alt="Fotoğraf">
                                                        <a class="users-list-name" href="#">@item.MüşteriAd @item.MüşteriSoyad</a>
                                                        <span class="users-list-date">@item.MüşteriŞehir</span>
                                                    </li>
                                                }
                                            </ul>

                                            <!-- /.users-list -->
                                        </div>

                                        <!-- /.card-body -->
                                        <div class="card-footer text-center">
                                            <a href="javascript::">View All Users</a>
                                        </div>
                                        <!-- /.card-footer -->
                                    </div>
                                    <!--/.card -->
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                            <!-- TABLE: LATEST ORDERS -->
                            <div class="card">
                                <div class="card-header border-transparent">
                                    <h3 class="card-title">Son Satışlar</h3>

                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table m-0">
                                            <thead>
                                                <tr>
                                                    <th>Ürün</th>
                                                    <th>Görsel</th>
                                                    <th>Personel</th>
                                                    <th>Müşteri</th>
                                                    <th>Tarih</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.stş)
                                                {


                                                    <tr>
                                                        <td>@item.Ürünler.ÜrünAd</td>
                                                        <td>
                                                            <div class="product-img">
                                                                <img src="@item.Ürünler.ÜrünGörsel" alt="Görsel" class="img-size-50">
                                                            </div>
                                                        </td>
                                                        <td>@item.Personeller.PersonelAd @item.Personeller.PersonelSoyad</td>
                                                        <td>@item.Müşteriler.MüşteriAd @item.Müşteriler.MüşteriSoyad</td>
                                                        <td>
                                                            @item.Tarih
                                                        </td>
                                                    </tr>

                                                }




                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /.table-responsive -->
                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer clearfix">
                                    <a href="javascript:void(0)" class="btn btn-sm btn-info float-left">Place New Order</a>
                                    <a href="javascript:void(0)" class="btn btn-sm btn-secondary float-right">View All Orders</a>
                                </div>
                                <!-- /.card-footer -->
                            </div>
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->

                        <div class="col-md-4">
                            <!-- Info Boxes Style 2 -->
                            <div class="info-box mb-3 bg-warning">
                                <span class="info-box-icon"><i class="far fa-heart"></i></span>

                                <div class="info-box-content">
                                    <span class="info-box-text">Toplam Gelir</span>
                                    <span class="info-box-number">@ViewBag.d1</span>
                                </div>
                                <!-- /.info-box-content -->
                            </div>
                            <!-- /.info-box -->
                            <div class="info-box mb-3 bg-success">
                                <span class="info-box-icon"><i class="fas fa-tag"></i></span>

                                <div class="info-box-content">
                                    <span class="info-box-text">Toplam Maliyet</span>
                                    <span class="info-box-number">@ViewBag.d2</span>
                                </div>
                                <!-- /.info-box-content -->
                            </div>
                            <!-- /.info-box -->
                            <div class="info-box mb-3 bg-danger">
                                <span class="info-box-icon"><i class="fas fa-cloud-download-alt"></i></span>

                                <div class="info-box-content">
                                    <span class="info-box-text">Net Kar</span>
                                    <span class="info-box-number">@ViewBag.d3</span>
                                </div>
                                <!-- /.info-box-content -->
                            </div>
                            <!-- /.info-box -->
                            <div class="info-box mb-3 bg-info">
                                <span class="info-box-icon"><i class="far fa-comment"></i></span>

                                <div class="info-box-content">
                                    <span class="info-box-text">Satış Hedefi</span>
                                    <span class="info-box-number">@ViewBag.d4</span>
                                </div>
                                <!-- /.info-box-content -->
                            </div>
                            <!-- /.info-box -->
                            <!-- /.card -->
                            <!-- PRODUCT LIST -->
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Son Eklenen 5 Ürün</h3>

                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body p-0">
                                    <ul class="products-list product-list-in-card pl-2 pr-2">
                                        @foreach (var item in Model.ürn)
                                        {


                                            <li class="item">
                                                <div class="product-img">
                                                    <img src="@item.ÜrünGörsel" alt="Görsel" class="img-size-50">
                                                </div>
                                                <div class="product-info">
                                                    <a href="javascript:void(0)" class="product-title">
                                                        @item.ÜrünAd
                                                        <span class="badge badge-warning float-right">₺@item.SatışFiyat</span>
                                                    </a>
                                                    <span class="product-description">
                                                        @item.Marka
                                                    </span>
                                                </div>
                                            </li>
                                        }
                                        <!-- /.item -->
                                        <!-- /.item -->
                                        <!-- /.item -->
                                        <!-- /.item -->
                                    </ul>
                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer text-center">
                                    <a href="javascript:void(0)" class="uppercase">View All Products</a>
                                </div>
                                <!-- /.card-footer -->
                            </div>
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                    @Html.Action("Index2", "HızlıBakış")

                </div><!--/. container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        
    
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="/Klasörler/web4/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="/Klasörler/web4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="/Klasörler/web4/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/Klasörler/web4/dist/js/adminlte.js"></script>

    <!-- OPTIONAL SCRIPTS -->
    <script src="dist/js/demo.js"></script>

    <!-- PAGE PLUGINS -->
    <!-- jQuery Mapael -->
    <script src="/Klasörler/web4/plugins/jquery-mousewheel/jquery.mousewheel.js"></script>
    <script src="/Klasörler/web4/plugins/raphael/raphael.min.js"></script>
    <script src="/Klasörler/web4/plugins/jquery-mapael/jquery.mapael.min.js"></script>
    <script src="/Klasörler/web4/plugins/jquery-mapael/maps/usa_states.min.js"></script>
    <!-- ChartJS -->
    <script src="/Klasörler/web4/plugins/chart.js/Chart.min.js"></script>

    <!-- PAGE SCRIPTS -->
    <script src="/Klasörler/web4/dist/js/pages/dashboard2.js"></script>
</body>
</html>
