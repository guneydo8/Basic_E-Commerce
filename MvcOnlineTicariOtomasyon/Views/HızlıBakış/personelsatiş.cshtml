@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Sınıflar.personelsatış>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Personel Satış Tablosu</h3>


    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table">
            
            <thead style="        background-color: #000000;color:white
">
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Personel</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Satış Sayısı</th>
                </tr>
            </thead>
            <tbody>
                @{int sayi = 0; }
                @foreach (var item in Model)
                {


                <tr>
                    <td>@{sayi++;} @sayi</td>
                    <td>@item.Personel</td>

                    @if (item.Sayi == 1)
                    {
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-success" style="width: 25%"></div>
                            </div>
                        </td>

                        <td><span class="badge bg-gradient-yellow">@item.Sayi</span></td>
                    }


                    @if (item.Sayi == 2)
                    {
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-success" style="width: 50%"></div>
                            </div>
                        </td>

                        <td><span class="badge bg-gradient-danger">@item.Sayi</span></td>
                    }

                    @if (item.Sayi > 2)
                    {
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-gradient-fuchsia" style="width: 75%"></div>
                            </div>
                        </td>

                        <td><span class="badge bg-gradient-teal">@item.Sayi</span></td>
                    }



                </tr>
                }



            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>