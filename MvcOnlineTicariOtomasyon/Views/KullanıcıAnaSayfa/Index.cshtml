<section class="new_arrivals_area section-padding-80 clearfix">

    <div class="container">
        <div class="row">

            <div class="col-12">
                <div class="section-heading text-center">
                    <h2>Son Eklenenler</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="container">

        <div class="row">



            <div class="col-12">

                <div class="popular-products-slides owl-carousel">
                    @foreach (var item in Model.ürn)
                    {

                        <!-- Single Product -->
                        <div class="single-product-wrapper">
                            <!-- Product Image -->
                            <div class="product-img">
                                <img src="@item.ÜrünGörsel" style="width:400px;height:200px" alt="">
                                <!-- Hover Thumb -->
                                <!-- Favourite -->
                                <div class="product-favourite">
                                    <a href="/KullanıcıÜrünler/FavoriEkle/@item.ÜrünId" class="favme fa fa-heart"></a>
                                </div>
                            </div>
                            <!-- Product Description -->
                            <div class="product-description">
                                <span>@item.Marka</span>
                                <a href="/KullanıcıÜrünler/ÜrünDetay/@item.ÜrünId">
                                    <h6>@item.ÜrünAd</h6>
                                </a>
                                <p class="product-price">₺@item.SatışFiyat</p>

                                <!-- Hover Content -->
                                <div class="hover-content">
                                    <!-- Add to Cart -->
                                    <div class="add-to-cart-btn">
                                        <a href="/KullanıcıSepetim/SepeteEkle/@item.ÜrünId" class="btn essence-btn">Sepete Ekle</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Single Product -->
                        <!-- Single Product -->
                        <!-- Single Product -->
                    }
                </div>

            </div>

        </div>

    </div>

</section>
