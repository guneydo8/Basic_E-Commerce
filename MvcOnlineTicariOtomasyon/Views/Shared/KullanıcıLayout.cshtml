
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title  -->
    <title>Essence - Fashion Ecommerce Template</title>

    <!-- Favicon  -->
    <link rel="icon" href="/Klasörler/webkullanıcı/img/core-img/favicon.ico">

    <!-- Core Style CSS -->
    <link rel="stylesheet" href="/Klasörler/webkullanıcı/css/core-style.css">
    <link rel="stylesheet" href="/Klasörler/webkullanıcı/style.css">

</head>

<body>
    <!-- ##### Header Area Start ##### -->
    <header class="header_area">
        <div class="classy-nav-container breakpoint-off d-flex align-items-center justify-content-between">
            <!-- Classy Menu -->
            <nav class="classy-navbar" id="essenceNav">
                <!-- Logo -->
                <a class="nav-brand" href="/KullanıcıAnaSayfa/Index/"><img src="~/Klasörler/logo.png" style="width:80px;height:80px;" alt=""></a>
                <!-- Navbar Toggler -->
                <div class="classy-navbar-toggler">
                    <span class="navbarToggler"><span></span><span></span><span></span></span>
                </div>
                <!-- Menu -->
                <div class="classy-menu">
                    <!-- close btn -->
                    <div class="classycloseIcon">
                        <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                    </div>
                    <!-- Nav Start -->
                    <div class="classynav">
                        <ul>
                            <li><a href="/KullanıcıAnaSayfa/Index/">Ana Sayfa</a></li>
                            <li><a href="/KullanıcıÜrünler/Index/">Ürünler</a></li>

                            @if (Context.Session["Mail"]!=null)
                            {
                                <li><a href="/KullanıcıFavori/FavoriListe/">Favoriler</a></li>
                                <li><a href="/KullanıcıSepetim/Index/">Sepetim</a></li>
                            }



                        </ul>
                    </div>

                    <!-- Nav End -->
                </div>
            </nav>


            <!-- Header Meta Data -->
            <div class="header-meta d-flex clearfix justify-content-end">


                <!-- Search Area -->
                <div class="search-area">
                    <form action="#" method="post">
                        <input type="search" name="search" id="headerSearch" placeholder="Type for search">
                        <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>

                    </form>

                </div>


                @if (Context.Session["Mail"] != null) {
                <!-- Favourite Area -->
               @Html.Action("kullanıcı2","KullanıcıLogin")

                <div class="cart-area">
                    <a href="#" id="essenceCartBtn"><img src="~/Klasörler/webkullanıcı/img/core-img/user.svg" alt=""> <span></span></a>
                </div>
                }
                <div style="margin-right:30px" class="classynav">
                    <ul>
                        @if (Context.Session["Mail"] != null)
                        {
                            @Html.Action("kullanıcı", "KullanıcıLogin");
                        }

                        @if (Context.Session["Mail"] == null)
                        {
                            <li><a href="/KullanıcıLogin/Login/">Giriş Yap</a></li>
                        }
                    </ul>

                </div>


            </div>

        </div>
    </header>
    <!-- ##### Header Area End ##### -->
    <!-- ##### Right Side Cart Area ##### -->
    <div class="cart-bg-overlay"></div>

    @if (Context.Session["Mail"] != null)
    {
        @Html.Action("favori", "KullanıcıFavori")


    }





    @RenderBody()
    <script src="/Klasörler/webkullanıcı/js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="/Klasörler/webkullanıcı/js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="/Klasörler/webkullanıcı/js/bootstrap.min.js"></script>
    <!-- Plugins js -->
    <script src="/Klasörler/webkullanıcı/js/plugins.js"></script>
    <!-- Classy Nav js -->
    <script src="/Klasörler/webkullanıcı/js/classy-nav.min.js"></script>
    <!-- Active js -->
    <script src="/Klasörler/webkullanıcı/js/active.js"></script>

</body>

</html>