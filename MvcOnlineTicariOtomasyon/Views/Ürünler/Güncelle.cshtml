@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Ürünler
@{ ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/AdminLayout.cshtml"; }




@using (Html.BeginForm("Güncelle", "Ürünler", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Ürün Güncelle</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>

        <div class="card-body">
            <div class="form-group">
                @Html.HiddenFor(x=>x.ÜrünId)
                <label for="inputName">Ürün Ad</label>
                @Html.TextBoxFor(x => x.ÜrünAd, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="inputDescription">Marka</label>
                @Html.TextBoxFor(x => x.Marka, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="inputClientCompany">KategoriAd</label>
                @Html.DropDownListFor(x => x.KategoriId, (List<SelectListItem>)ViewBag.ktg, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="inputProjectLeader">Stok</label>
                @Html.TextBoxFor(x => x.Stok, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="inputProjectLeader">Alış Fiyat</label>
                @Html.TextBoxFor(x => x.AlışFiyat, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="inputProjectLeader">Satış Fiyat</label>
                @Html.TextBoxFor(x => x.SatışFiyat, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="inputProjectLeader">Ürün Bilgi</label>
                @Html.TextAreaFor(x => x.ÜrünBilgi, new { @class = "form-control" })
            </div>
            <div>
                <input class="btn btn-danger btn-block text-uppercase" type="file" name="ÜrünGörsel" />

            </div>



        </div>

        <!-- /.card-body -->
    </div> <!-- /.card -->
    <div class="col-12">
        <button type="submit" class="btn btn-outline-success btn-block text-uppercase">Ürün Güncelle</button>
    </div>
}





