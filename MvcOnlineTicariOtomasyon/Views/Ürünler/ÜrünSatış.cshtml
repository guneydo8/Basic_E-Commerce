@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Satışlar
@{
    ViewBag.Title = "ÜrünSatış";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("ÜrünSatış", "Ürünler", FormMethod.Post))
{

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Ürün Satış Paneli</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>

    <div class="card-body">
        <input type="hidden" value="@ViewBag.urnıd" name="ÜrünId" class="form-control" />


        <div class="form-group mb-3">
            <label for="name">
                Ürün Ad
            </label>
            <input type="text" value="@ViewBag.ürn" class="form-control" readonly />
        </div>


        <div class="form-group mb-3">
            <label for="name">
                Personel
            </label>
            @Html.DropDownListFor(x => x.PersonelId, (List<SelectListItem>)ViewBag.prs, new { @class = "form-control" })
        </div>
        <div class="form-group mb-3">
            <label for="name">
                Müşteri
            </label>
            @Html.DropDownListFor(x => x.MüşteriId, (List<SelectListItem>)ViewBag.mst, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="inputDescription">Birim Fiyat</label>
            @*@Html.TextBoxFor(x => x.BirimFiyat, new { @class = "form-control" })*@

            <input type="text" value="@ViewBag.fyt" id="txt1" name="BirimFiyat" onkeyup="sum();" readonly class="form-control" />
        </div>

        <div class="form-group">
            <label for="inputProjectLeader">Adet</label>
            @*@Html.TextBoxFor(x => x.Adet, new { @class = "form-control" })*@
            <input type="number" id="txt2" placeholder="Ürün Adedi Giriniz" min="1" required="" name="Adet" class="form-control" onchange="sum();" />
        </div>
        <div class="form-group">
            <label for="inputProjectLeader">Toplam Fiyat</label>
           <input type="text" id="txt3" class="form-control" name="ToplamFiyat" readonly />
        </div>


    </div>

    <!-- /.card-body -->
</div> <!-- /.card -->
    <div class="col-12">
        <button type="submit" class="btn btn-outline-success btn-block text-uppercase">Satış Yap</button>
    </div>}



<script>
    function sum() {
        var birim = document.getElementById('txt1').value;
        var adet = document.getElementById('txt2').value;
        var toplam = parseFloat(birim) * parseFloat(adet);

        if (!isNaN(toplam)) {
            document.getElementById('txt3').value = toplam;
        }
    }
</script>
