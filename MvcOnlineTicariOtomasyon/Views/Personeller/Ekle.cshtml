@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Personeller
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



@using (Html.BeginForm("Ekle", "Personeller", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Yeni Personel Girişi</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>

    <div class="card-body">
        <div class="form-group">
            <label for="inputName">Personel Ad</label>
            @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="inputDescription">Personel Soyad</label>
            @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label for="inputClientCompany">Departman</label>
            @Html.DropDownListFor(x => x.DepartmanId, (List<SelectListItem>)ViewBag.d1, new { @class = "form-control" })
        </div>
        
        <div>
            <input class="btn btn-danger btn-block text-uppercase" type="file" required="" name="PersonelFotograf" />

        </div>



    </div>

    <!-- /.card-body -->
</div> <!-- /.card -->
                                <div class="col-12">
                                    <button type="submit" class="btn btn-outline-success btn-block text-uppercase">Personel Ekle</button>
                                </div>}






