            <!--@Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })

            </div>-->







        </div>

        <!-- /.card-body -->
    </div> <!-- /.card -->
    <div class="col-12">
        <button type="submit" id="btn1" class="btn btn-outline-success btn-block text-uppercase">Ekle</button>

    </div>
}


