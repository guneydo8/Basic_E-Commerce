@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Faturalar
@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}




@using (Html.BeginForm("Güncelle", "Fatura", FormMethod.Post))
{

    <div class="card card-purple">
        <div class="card-header">
            <h3 class="card-title">Fatura Güncelle</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
    @Html.HiddenFor(x=>x.FaturaId)
        <div class="card-body">
            <div class="form-group">
                <label for="inputName">Seri No</label>
                @Html.TextBoxFor(x => x.FaturaSeriNo, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="inputDescription">Sıra No</label>
                @Html.TextBoxFor(x => x.FaturaSıraNo, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="inputClientCompany">Müşteri</label>
                @Html.DropDownListFor(x => x.MüşteriId, (List<SelectListItem>)ViewBag.mst, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="inputProjectLeader">Vergi Dairesi</label>
                @Html.TextBoxFor(x => x.VergiDairesi, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="inputProjectLeader">Tarih</label>
                @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="inputProjectLeader">Toplam</label>
                @Html.TextBoxFor(x => x.Toplam, new { @class = "form-control" })
            </div>



        </div>

        <!-- /.card-body -->
    </div> <!-- /.card -->
    <div class="col-12">
        <button type="submit" class="btn btn-outline-success btn-block text-uppercase">Fatura Güncelle</button>
    </div>}





