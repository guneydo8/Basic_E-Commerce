@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}





<br />

<div class="card-body p-0">
    <table id="tbl1" class="table table-striped projects">
        <thead>
            <tr>
              
                <th>
                   Ürün
                </th>
                <th>
                   Birim Fiyat
                </th>
               
                <th>
                    Adet
                </th>
                <th>
                    Toplam Fiyat
                </th>

              
               
                <th>
                    <a class="btn btn-info btn-sm" href="/Fatura/FaturaÜrün/@ViewBag.id">
                        <i class="fa fa-plus">
                            Fatura Ürün Ekle
                        </i>

                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {


                <tr>
                  
                    <td>

                        @item.Ürünler.ÜrünAd


                    </td>
                    <td>
                        @item.BirimFiyat
                    </td>

                    <td>
                        @item.Miktar
                    </td>

                    <td>
                        @item.Tutar
                    </td>

                  
                    <td>
                        <a class="btn btn-primary btn-sm" href="/Fatura/Detay/@item.FaturaId">
                            <i class="fas fa-folder">
                            </i>

                        </a>

                        <a class="btn btn-danger btn-sm" href="/Fatura/Güncelle/@item.FaturaId">
                            <i class="fas fa-pencil-alt">
                            </i>

                        </a>
                    </td>
                </tr>

            }






        </tbody>
    </table>
</div>




