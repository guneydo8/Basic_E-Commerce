@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Departmanlar>
@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />

<div class="card-body p-0">
    <table id="tbl1" class="table table-striped projects">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Departman Ad
                </th>




                <th>
                    <a class="btn btn-info btn-sm" href="/Departmanlar/Ekle/">
                        <i class="fa fa-plus">
                            Departman Ekle
                        </i>

                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {


                <tr>
                    <td>
                        #@item.DepartmanId
                    </td>
                    <td>

                        @item.DepartmanAd


                    </td>



                    <td>
                        <a class="btn btn-primary btn-sm" href="/Departmanlar/Detay/@item.DepartmanId">
                            <i class="fas fa-folder">
                            </i>

                        </a>
                        <a class="btn btn-info btn-sm" href="/Departmanlar/Güncelle/@item.DepartmanId">
                            <i class="fas fa-pencil-alt">
                            </i>

                        </a>
                        <a class="btn btn-danger btn-sm" href="/Departmanlar/Sil/@item.DepartmanId">
                            <i class="fas fa-trash">
                            </i>

                        </a>
                    </td>
                </tr>

            }






        </tbody>
    </table>
</div>



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>
